<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.LoginUserActivity"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="#66FFEB3B">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="100"
            android:orientation="horizontal"
            android:background="@color/black">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                app:srcCompat="@drawable/rakuten_logo"
                android:id="@+id/imageView2"
                android:scaleType="fitCenter"
                android:paddingLeft="15dp"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="35"
                app:srcCompat="@drawable/default_user_2"
                android:id="@+id/imgProfilePic"
                android:scaleType="fitEnd" android:layout_gravity="center"/>

        <TextView
                android:text="UserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:id="@+id/txtUserName"
                android:gravity="center_vertical"
                android:textSize="20sp" android:paddingLeft="8dp" android:textColor="#FFFFFF"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="92"
            android:padding="2dp"
            android:scrollbars="vertical"

    />
</LinearLayout>
