<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.LoginUserActivity"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="#B3FFEB3B">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/rakuten_logo"
            android:id="@+id/imageView"
            android:layout_weight="20"
            android:scaleType="fitCenter"
            android:paddingHorizontal="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical"
            android:gravity="center">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edtUser"
                android:hint="Usuario:"
                android:background="@drawable/border_view"
                android:layout_gravity="center" android:shadowColor="#FFFFFF"
                android:paddingHorizontal="40dp" android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edtPass"
                android:hint="Contraseña:"
                android:background="@drawable/border_view"
                android:layout_gravity="center" android:paddingHorizontal="40dp"
                android:layout_marginBottom="20dp" android:layout_marginHorizontal="40dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:id="@+id/btnLogin"
                android:text="Login"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#2196F3" android:textSize="20sp" android:textStyle="bold"
                android:paddingHorizontal="40dp" android:textColor="#FFFFFF"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                    android:text="¿No tienes cuenta?"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:gravity="end"/>
            <TextView
                    android:text="Regístrate"
                    android:textColor="#2196F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textNewUser"
                    android:paddingLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            app:srcCompat="@drawable/rakuten_r"
            android:id="@+id/imageView3"
            android:scaleType="fitCenter" android:paddingTop="80dp" android:paddingBottom="15dp"/>

</LinearLayout>